<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('include/head.ejs') %>
    <title><%= pageTitle %></title>
    <style>
        /* Your existing styles */
        .title-container {
            text-align: center;
            padding: 20px;
            position: relative;
            top: -250px;
            margin-bottom: 100px;
        }

        .titles-container {
            text-align: center;
            padding: 20px;
            position: relative;
            top: 0px;
        }

        .banner img {
            width: 100%;
        }

        .content-container {
            display: flex;
            justify-content: space-around;
            align-items: center;
            padding: 30px;
            margin-top: -300px;
            margin-bottom: 100px;
        }

        .map-container {
            width: 10%;
            text-align: center;
        }

        .chart-container {
            width: 20%;
        }

        .chart-container canvas {
            width: 100%;
            height: auto;
            margin-bottom: 100px;
        }

        .table-container {
            width: 80%;
            margin: 0 auto;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);
            border-radius: 20px;
            margin-bottom: 50px;
            background-color: #584f42;
        }

        #searchInput {
            width: 250px;
            padding: 8px;
            margin-bottom: 5px;
            margin-top: 5px;
            border: thick double #00B2A9;
            border-radius: 50px;
            float: right;
            margin-right: 10px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border: none;
            border-radius: 0px;
        }

        th, td {
            padding: 10px;
            border: none;
        }

        th {
            background-color: #FFF8D6;
        }

        .citie-text {
            color: #C2AF76;
        }

        #table-navigation {
            display: flex;
            justify-content: space-between;
            margin-right: 10px;
            margin-left: 10px;
        }

        #table-navigation button {
            width: 100px;
            padding: 8px;
            border: 3px solid #C2AF76;
            border-radius: 50px;
            background-color: #FFF8D6;
            cursor: pointer;
            margin-bottom: 10px;
        }

        #table-navigation button:hover {
            background-color: #C2AF76;
            color: white;
            border: 3px solid #FFF8D6;
        }

        .table tr[style*="display: none"] {
            transition: all 0.3s ease;
        }

        #spinner-container {
            display: flex;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            z-index: 9999;
            overflow: hidden;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        
        #static-image {
            width: 300px;
            height: auto;
            margin-bottom: 20px;
        }
        
        #spinner {
            display: flex;
            gap: 10px;
        }
        
        .dot {
            width: 16px;
            height: 16px;
            background-color: #3498db;
            border-radius: 50%;
            animation: blink 1.4s infinite both;
        }
        
        .dot:nth-child(1) {
            animation-delay: -0.32s;
        }
        
        .dot:nth-child(2) {
            animation-delay: -0.16s;
        }
        
        @keyframes blink {
            0%, 80%, 100% {
                opacity: 0;
            }
            40% {
                opacity: 1;
            }
        }
        
        
    </style>
</head>

<body class="dark-mode">
    <div id="spinner-container">
        <img id="static-image" src="/img/favi.png" alt="Loading...">
        <div id="spinner">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
    </div>
    

    <%- include('component/navbar.ejs') %>

    <div class="banner">
        <img src="/img/bbj.png" alt="Banner Image">
    </div>

    <div class="title-container">
        <h1><span class="citie-text">CITY</span> PROFILE DASHBOARD</h1>
    </div>

    <div class="content-container">
        <iframe title="web" width="1024" height="612" src="https://app.powerbi.com/view?r=eyJrIjoiZjk0NTY5ZDgtODgwOC00Yjc1LTg0MDUtNjllZDM3M2Y0NmRmIiwidCI6IjRhNGY3YjUyLTBlMDUtNDQxNS04NDU0LTc2ODliMDBhODdiMiIsImMiOjEwfQ%3D%3D&pageName=ReportSection" frameborder="0" allowFullScreen="true"></iframe>
    </div>

    <div class="titles-container">
        <h1><span class="citie-text">CITY</span> OVERALL</h1>
    </div>

    <div class="table-container">
        <h2></h2>
        <input type="text" id="searchInput" placeholder="ค้นหา..." onkeyup="searchTable()">
        <table class="table">
            <thead>
                <tr>
                    <th>ลำดับ</th>
                    <th>แผนพัฒนาเมืองอัจฉริยะ</th>
                    <th>จังหวัด</th>
                    <th>ประกาศเมืองอัจฉริยะ</th>
                    <th>อายุการถือครองตราสัญลักษณ์</th>
                    <th>%ความคืบหน้า</th>
                    <th>%ความสำเร็จ</th>
                </tr>
            </thead>
            <tbody>
                <% fechdata.forEach((data, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><a href="#"><%= data.cityName %></a></td>
                    <td><%= data.province %></td>
                    <td>
                        <% 
                            const date = new Date(data.date);
                            const thaiMonths = ['มกราคม', 'กุมภาพันธ์', 'มีนาคม', 'เมษายน', 'พฤษภาคม', 'มิถุนายน', 
                                                'กรกฎาคม', 'สิงหาคม', 'กันยายน', 'ตุลาคม', 'พฤศจิกายน', 'ธันวาคม'];
                            const formattedDate = `${date.getDate().toString().padStart(2, '0')} ${thaiMonths[date.getMonth()]} ${date.getFullYear().toString().substr(-2)}`;
                        %>
                        <%= formattedDate %>
                    </td>
                    <td>1 ปี 2 เดือน 3 วัน</td>
                    <td>50%</td>
                    <td>50%</td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <div id="table-navigation">
            <button onclick="previousPage()">Back</button>
            <button onclick="nextPage()">Next</button>
        </div>        
    </div>

    <%- include('component/footer.ejs') %>

    <script>
        window.onload = function() {
            document.getElementById('spinner-container').style.display = 'none';
        };

        window.addEventListener('DOMContentLoaded', (event) => {
            document.getElementById('spinner-container').style.display = 'flex';
        });

        var currentPage = 0;
        var rowsPerPage = 10;

        function nextPage() {
            var table = document.querySelector(".table");
            var tr = table.getElementsByTagName("tr");
            var totalPages = Math.ceil(tr.length / rowsPerPage);

            if (currentPage < totalPages - 1) {
                currentPage++;
                updateTableDisplay();
            }
        }

        function previousPage() {
            if (currentPage > 0) {
                currentPage--;
                updateTableDisplay();
            }
        }

        function updateTableDisplay() {
            var table = document.querySelector(".table");
            var tr = table.getElementsByTagName("tr");

            for (var i = 0; i < tr.length; i++) {
                if (i >= currentPage * rowsPerPage && i < (currentPage + 1) * rowsPerPage) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateTableDisplay();
        });

        document.getElementById('map').addEventListener('click', function(event) {
            var x = event.offsetX / this.width;
            var y = event.offsetY / this.height;

            console.log(`Clicked coordinates: x=${x}, y=${y}`);
        });

        function searchTable() {
            var input = document.getElementById("searchInput");
            var filter = input.value.toUpperCase();
            var table = document.querySelector(".table");
            var tr = table.getElementsByTagName("tr");

            for (var i = 0; i < tr.length; i++) {
                var td = tr[i].getElementsByTagName("td");
                if (td.length > 0) {
                    var rowContainsFilter = false;
                    for (var j = 0; j < td.length; j++) {
                        if (td[j].textContent.toUpperCase().indexOf(filter) > -1) {
                            rowContainsFilter = true;
                            break;
                        }
                    }
                    tr[i].style.display = rowContainsFilter ? "" : "none";
                }
            }
        }
    </script>
</body>
</html>
