                margin-bottom: 50px;
                background-color: #FEDC7A;
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            th,
            td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
                font-size: 16px;
            }

            th {
                background-color: #FEDC7A;
                color: black;
                border-radius: 0rem;
                font-size: 14px;
                color: #424242;
            }

            .card-body {
                background-color: #FFF4D1;
