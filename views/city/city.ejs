        }

        .my-swal-popup {
            background-color: #F8F9FA;
            border: none;
            box-shadow: none;
        }

        .my-swal-title {
            color: #04B2A1;
        }

        .my-swal-text {
            color: #495057;
        }

        .my-swal-confirm-button {
            background-color: #28A745;
            color: #FFFFFF;
            border-radius: 5px;
        }
