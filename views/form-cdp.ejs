            width: 50%;
            padding: 10px;
            box-sizing: border-box;
            margin-left: 50px;
        }

        form {
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
        }

        form div {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-top: 20px;
            width: 100%;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
        }

        select,
        textarea,
        input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 2px solid #C2AF76;
            border-radius: 4px;
            resize: vertical;
            border-radius: 15px;
            background-color: #fffbf0;
        }

        input {
            width: 50%;
            position: relative;
            left: 75%;
            transform: translateX(-50%);
        }

        button {
            background-color: #C2AF76;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 50px;
            margin-top: 20px;
        }

        button:hover {
            background-color: #C2AF76;
            border-radius: 50px;
        }

        #fileUpload {
            display: none;
        }

        .right-content ul {
            list-style-type: none;
            /* ลบเครื่องหมายหน้ารายการออก */
            padding: 0;
            margin: 0;
        }

        .right-content li {
            border-bottom: 1px solid #ccc;
            /* เพิ่มเส้นแบ่งระหว่างรายการ */
            padding: 8px;
            /* เพิ่มพื้นที่รอบรายการ */
            margin-bottom: 5px;
            /* เพิ่มระยะห่างระหว่างรายการ */
        }

        .left-content {
            padding: 10px;
            /* เพิ่มพื้นที่รอบข้อมูล */
            margin: 10px 0;
            /* เพิ่มระยะห่างด้านบนและล่าง */
        }

        .left-content p {
            margin: 5px 0;
            /* ตั้งค่าระยะห่างระหว่างประโยค */
            padding-left: 20px;
            /* เพิ่มพื้นที่ด้านซ้าย */
        }

        .left-content p.header {
            font-weight: bold;
            /* เพิ่มความหนาของตัวอักษรสำหรับหัวข้อ */
            padding-left: 10px;
            /* ปรับตำแหน่งของหัวข้อ */
            color: #444;
            /* เปลี่ยนสีตัวอักษร */
        }

        /* เพิ่มสไตล์สำหรับ input ที่ถูก disabled */
        #submitButton:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }
    </style>
