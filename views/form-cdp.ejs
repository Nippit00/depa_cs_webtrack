        <script>
            
            document.addEventListener('DOMContentLoaded', function () {
                //checkstatus to alert
                const urlParams = new URLSearchParams(window.location.search);
                const successParam = urlParams.get('success');
                //send timestamp
                const currentDateTimeField = document.getElementById('currentDateTime');
                const currentDateTime = new Date().toLocaleString('th-TH', {
                    timeZone: 'Asia/Bangkok',
                    hour12: false, 
                });
                currentDateTimeField.value = currentDateTime;
                //action button
                var saveButton = document.getElementById('saveButton');
                var submitButton = document.getElementById('submitButton');
                var form = document.getElementById('reportForm');

                saveButton.addEventListener('click', function () {
                    enableSubmitButton();
                    // sendDataToAPI(); // เรียกใช้ฟังก์ชัน sendDataToAPI() เมื่อคลิกที่ปุ่ม "บันทึก"
                });

                submitButton.addEventListener('click',function(){
                    csurf=document.getElementById('token').value
                    // console.log( csurf )
                    form=document.getElementById('reportForm');
                    sendDataToAPI(csurf );

                    
                })


                function enableSubmitButton() {
                    submitButton.disabled = false;
                }
                if (successParam === 'true') {
                    swal("Success!", "Data saved successfully", "success");
                }
                

                async function sendDataToAPI(csrfToken) {
                    const form = document.getElementById('reportForm');
                    const formData = new FormData(); // สร้าง FormData object

                    // วนลูปผ่านทุกๆองค์ประกอบของฟอร์ม
                    form.querySelectorAll('input, select, textarea').forEach(field => {
                        // เพิ่มชื่อฟิลด์และค่าที่ผู้ใช้ป้อนลงในฟิลด์ลงใน FormData object
                        formData.append(field.name, field.value);
                    });

                    // แสดงข้อมูลในฟอร์มทั้งหมดใน console.log
                    // console.log([...formData.entries()]);
                    console.log("Here",[...formData.entries()])
                    try {
                        var response = await fetch('/sendformcdp', {
                            method: 'POST',
                            body: [...formData.entries()], // ใช้ FormData object ที่มีข้อมูลจริง ๆ
                            headers: {
                                'CSRF-Token': csrfToken
                            }
                        });

                        if (!response.ok) {
                            throw new Error('Failed to send data');
                        }
                    } catch (error) {
                        console.error('Error sending data to API:', error);
                    }
                }



            });

        </script>

