        .back {
            margin: 30px 0px 0px 30px;
            color: #000000;
            /* ตั้งค่าสีข้อความในลิงก์เป็นสีขาว */
            background-color: #FFF0C4;
            border-radius: 20px;
            width: 100px;
            height: 40px;
            text-align: center;
        }


        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .head {
            text-align: center;
            margin-top: 50px;
        }

        .custom-container,
        .custom-container-1 {
            display: flex;
            justify-content: space-between;
            width: 70%;
            margin: 0 auto;
            padding: 20px;
            border-radius: 50px;
            margin-top: 50px;
            margin-bottom: 50px;
            background-color: #FFF0C4;
        }

        .custom-container-1>div {
            width: 48%;
            padding: 10px;
            box-sizing: border-box;
            margin-bottom: 20px;
